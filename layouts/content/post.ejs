<article class="post">
	<%if (typeof site.thumb_above !== "undefined" && site.thumb_above == true) {%>
		<%- include ../partials/thumbnail.ejs %>
	<%}%>
	<div class="inner">
		<header>
			<h1 class="title">
				<%if (typeof opts.is_single == "undefined") {%>
					<a href="<%=permalink%>"><%=title%></a>
				<%} else {%>
					<%=title%>
				<%}%>
			</h1>
			<div class="info">
				<%if (typeof date !== "undefined") {%>
					<time type="text" class="time" datetime="<%=moment(date)%>">
						<span>Posted on: </span>
						<a href="/posts/<%=moment(date).format("YYYY/MM")%>"><%=moment(date).format("LL")%></a>
					</time>
				<%} else {console.log(title, "has no date")}%>
				<div class="actions">
					<div class="share a2a_kit a2a_kit_size_32" data-a2a-url="http://alanscodelog.com<%=permalink%>" data-a2a-title="<%=title%>"> <%//TODO%>
						<a aria-label="share post" class="a2a_dd" href="https://www.addtoany.com/share">
							<i class="fontello icon-share" aria-hidden="true"></i>
						</a>
					</div>
					<div class="comment-link">
						<%if (typeof opts.is_single == "undefined") {%>
						<a href="<%=permalink%>#disqus_thread" aria-label="comments">
						<%} else {%>
						<a href="#disqus_thread" aria-label="comments"> 
						<%}%>
							<i class="fontello icon-comment" aria-hidden="true"></i>
						</a>
					</div>
				</div>
			</div>
		</header>
		<%if (typeof site.thumb_above == "undefined" || site.thumb_above == false) {%>
			<%- include ../partials/thumbnail.ejs %>
		<%}%>
		<div class="content">
			<%if (original_contents.includes("<!--more-->") && typeof opts.is_single == "undefined") {
				let excerpt = original_contents.toString()
				excerpt = excerpt.substring(0, excerpt.indexOf("<!--more-->"))%>
				<%- excerpt%>
				<p><a class="read-more" href="<%=permalink%>">Read Moreâ€¦</a></p>
			<%} else {%>
				<%- original_contents%>
			<%}%>
		</div>
		<footer>
			<%- include ../partials/taxonomies.ejs %>
		</footer>
	</div>
<%if (typeof opts.is_single == "undefined") {%>
</article>
<%} else {%>
	<%- include ../partials/related.ejs %>
	<%- include ../partials/pagination.ejs %>
	<%- include ../partials/comments.ejs %>
</article>
<%}%>
